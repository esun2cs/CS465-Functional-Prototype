<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/business_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="20dp"

    android:paddingTop="28dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="12dp"

    app:cardUseCompatPadding="false"
    app:cardElevation="4dp"
    app:cardCornerRadius="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- RIGHT SIDE IMAGE -->
        <ImageView
            android:id="@+id/business_photo"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.35"
            android:contentDescription="@string/app_name" />

        <!-- FAVORITE STAR (TOP-RIGHT) -->
        <ImageView
            android:id="@+id/business_favorite_star"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="8dp"
            android:src="@drawable/ic_star_border"
            android:tint="#2F4858"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- TEXT COLUMN ON THE LEFT -->
        <LinearLayout
            android:id="@+id/text_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingEnd="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/business_photo">

            <!-- NAME + NEW PILL ROW -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/business_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Business Name"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#2F4858"
                    android:maxLines="1"
                    android:ellipsize="end"/>

                <!-- “NEW” BADGE -->
                <TextView
                    android:id="@+id/business_new_badge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NEW"
                    android:textSize="11sp"
                    android:textColor="@android:color/white"
                    android:background="@drawable/new_badge_bg"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:visibility="gone"/>

            </LinearLayout>

            <!-- Added Recently -->
            <TextView
                android:id="@+id/business_added"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Added recently"
                android:textSize="11sp"
                android:textColor="#7A8A99"
                android:visibility="gone"/>

            <!-- Category -->
            <TextView
                android:id="@+id/business_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Handmade Charms and Art Commissions"
                android:textSize="12sp"
                android:textStyle="italic"
                android:textColor="#2F4858"
                android:layout_marginTop="2dp"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- Description -->
            <TextView
                android:id="@+id/business_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Business description text goes here."
                android:textSize="13sp"
                android:textColor="#374151"
                android:layout_marginTop="4dp"
                android:maxLines="4"
                android:ellipsize="end"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>