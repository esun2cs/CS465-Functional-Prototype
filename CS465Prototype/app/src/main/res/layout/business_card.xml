<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardElevation="3dp"
    android:id="@+id/business_card">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingEnd="8dp">

            <TextView
                android:id="@+id/business_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Business Name"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/business_added"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Added X days ago"
                android:textSize="10sp"/>

            <TextView
                android:id="@+id/business_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Category line"
                android:textSize="12sp"
                android:textStyle="italic"/>

            <TextView
                android:id="@+id/business_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Business description text"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/business_photo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:background="@drawable/ic_launcher_background"/>

        <ImageView
            android:id="@+id/business_favorite_star"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_star_border" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
